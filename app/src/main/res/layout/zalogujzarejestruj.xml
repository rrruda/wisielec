<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2D9">

    <!-- szerokość  i wysokość są sopasowane do ekranu
     ustawiony kolor tła-->

    <!-- nazwa do której mogę się odwołwać
    szerokość/wysokość tego okna
    margintop - odstęp od góy taki i taki (działa tylko jak jest przypięty
    start do lewo (JEST PRZYPIĘTY TYM ZYGZAKIEM)
    end to prawo
    top to góra
    -->

    <ImageView
        android:id="@+id/petlaimage"
        android:layout_width="299dp"
        android:layout_height="424dp"
        android:src="@drawable/petla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wisielectitle"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:text="WISIELEC"
        android:textColor="#4E342E"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zalogujbutton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:backgroundTint="#5D4037"
        android:text="ZALOGUJ SIĘ"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/petlaimage" />

    <Button
        android:id="@+id/zarejestrujbutton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:backgroundTint="#5D4037"
        android:text="ZAREJESTRUJ SIĘ"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zalogujbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>
