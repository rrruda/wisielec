<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2D9">

    <ImageView
        android:id="@+id/petlaimage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/petla"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ustawieniaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USTAWIENIA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        app:layout_constraintTop_toBottomOf="@id/petlaimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/dodajKategorieButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DODAJ KATEGORIĘ"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ustawieniaText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/dodajSlowoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DODAJ SŁOWA"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/dodajKategorieButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/wylogujButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WYLOGUJ SIĘ"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/dodajSlowoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
