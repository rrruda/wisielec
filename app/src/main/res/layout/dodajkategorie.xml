<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2D9"
    android:padding="24dp">

    <EditText
        android:id="@+id/kategoriaEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Wpisz nazwę kategorii"
        android:backgroundTint="#5D4037"
        android:textColorHint="#999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dodajKategorieButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dodaj kategorię"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/kategoriaEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/pokazKategorieButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pokaż listę kategorii"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dodajKategorieButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
