<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2D9"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wybierzText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WYBIERZ POZIOM I KATEGORIĘ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5D4037" />

        <RadioGroup
            android:id="@+id/poziom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/latwyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Łatwy" />

            <RadioButton
                android:id="@+id/trudnyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trudny"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategorie:"
            android:layout_marginTop="20dp"
            android:textColor="#4E342E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/kategorieLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/grajButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GRAJ"
            android:layout_marginTop="24dp"
            android:backgroundTint="#5D4037"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
