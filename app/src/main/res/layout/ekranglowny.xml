<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2D9">

    <ImageView
        android:id="@+id/petlaimage"
        android:layout_width="299dp"
        android:layout_height="424dp"
        android:src="@drawable/petla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grajbutton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:backgroundTint="#5D4037"
        android:text="GRAJ"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petlaimage"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/zasadybutton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:backgroundTint="#5D4037"
        android:text="ZASADY GRY"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grajbutton"/>

    <Button
        android:id="@+id/ustawieniaButton"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:backgroundTint="#5D4037"
        android:text="USTAWIENIA"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/zasadybutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>
